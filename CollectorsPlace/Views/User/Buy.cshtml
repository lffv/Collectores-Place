@model CollectorsPlace.Models.BuyArticle

@{
    ViewBag.Title = "Buy";
}

<div class="home">

    <div class="home-left">
        @Html.Partial("_ProfileLeft", Model.Profile)
    </div>

    <div class="wrap-dir">

        <div class="home-direita-bar">

            <p>Tera Anuncios</p>

            <p>Ou Recomendacoes</p>

        </div>

        <div class="home-direita">

            <div class="header-home-direita">

                <p> <i class="icon-tags"></i> Buy @Html.DisplayFor(model => model.Article.Name)</p>
                
            </div>

            <div class="body-home-direita">

                <p>Are you sure you want to Buy the Article for @Model.Article.EstimatedValue € ?</p>

                <p>Add to my Collection: </p>
                
                @using (Html.BeginForm()) {
                    
                    @Html.DropDownList("colls", Model.Collections)
                    
                    <p>
                        <input type="submit" value="Buy" class="botoes" />
                    </p>
                }

            </div>

        </div>

    </div>

</div>
