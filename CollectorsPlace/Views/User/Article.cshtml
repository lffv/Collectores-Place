@model CollectorsPlace.Models.ListArticle

@{
    ViewBag.Title = "Article Details";
}

<div class="home">

    <div class="home-left">
        @Html.Partial("_ProfileLeft", Model.Profile)
    </div>

    <div class="wrap-dir">

        <div class="home-direita-bar">

            <p>Tera Anuncios</p>

            <p>Ou Recomendacoes</p>

        </div>

        <div class="home-direita">
        
            <div class="header-home-direita">
        
                <p> <i class="icon-tags"></i>Article: @Html.DisplayFor(model => model.Article.Name) </p>
        
            </div>
            
            <div class="body-home-direita">

                <div class="rule">

                    <div class="display-row space">

                        <div class="imageArticle">

                            <img src="~/Images/articles/@Model.Article.CollAvatar" title="imagemArt" class="imagem-article" />

                        </div>

                        <div class="display-row-inner">

                        <p class="title">@Html.DisplayNameFor(model => model.Article.AcquiredDate):</p>
            
                        <p class="text">@Html.DisplayFor(model => model.Article.AcquiredDate)</p>
            
                    </div>

                        <div class="display-row-inner2">

                        <p class="title">@Html.DisplayNameFor(model => model.Article.EstimatedValue):</p>
            
                        <p class="text">@Html.DisplayFor(model => model.Article.EstimatedValue)</p>
            
                    </div>

                        <div class="display-row-inner3">

                        <p class="title">Collection:</p>
            
                        <p class="text">@Html.ActionLink(@Model.Collection.Name, "Collection", "User", new { id=Model.Collection.CollId }, null)</p>
            
                    </div>

                        <div class="display-row-inner">
                
                        <p class="title">@Html.DisplayNameFor(model => model.Article.Description):</p>
                
                        <p class="text">@Html.DisplayFor(model => model.Article.Description)</p>
            
                    </div>
            
                    </div>
            
                    <div class="display-row display-rowT">
                
                        <p class="title titleT">Tags:</p>

                    </div>
            
                    <div class="display-row">

                        <ul id="tagsro">
                
                            @foreach (string s in ViewBag.tags)
                            {
                                <li>@s</li>
                            }

                        </ul>

                    </div>

                </div>

                <div id="options">

                    @if (Model.Article.BusinessDisponibility == 2 || Model.Article.BusinessDisponibility == 3)
                    {
                        
                        <a class="collect" href="@Url.Action("ApresentaTroca", new { id =Model.Article.ArticleId })">
                            <input type="button" class="botoes" value="Trade" />
                        </a>

                    }

                    @if (Model.Article.BusinessDisponibility == 1 || Model.Article.BusinessDisponibility == 3)
                    {
                        <a class="collect" href="@Url.Action("Buy", new { id =Model.Article.ArticleId })">
                            <input type="button" class="botoes" value="Buy" />
                        </a>
                    }
                </div>

            </div>
    
        </div>

    </div>

</div>

@section Scripts {
    @*@Scripts.Render("~/bundles/jqueryui")*@
    @Scripts.Render("~/bundles/tagit")
}
